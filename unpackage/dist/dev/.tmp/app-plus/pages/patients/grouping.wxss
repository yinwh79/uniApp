.groupLists .list:last-child{
	border-bottom: none;
}
.groupLists .name{
	color: #333333;
	font-size: 32rpx;
}
.groupLists .age{
	font-size: 26rpx;
	color: #333333;
}
.groupLists .sex{
	width: 17rpx;
	height: 29rpx;
	margin: 0 20rpx;
}
